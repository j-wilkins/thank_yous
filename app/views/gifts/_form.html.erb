      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description,  class: 'span5' %>
  </div>
  <div class="field">
    <%= f.label :thanked %><br />
    <%= f.check_box :thanked %>
  </div>
